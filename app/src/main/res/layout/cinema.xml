<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<include layout="@layout/cinema_title"
    android:id="@+id/cinema_title"
    ></include>

    <com.cjj.MaterialRefreshLayout
        android:layout_below="@+id/cinema_title"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:isLoadMore="true"
        app:overlay="false"
        app:wave_show="true"
        app:wave_color="#20ff2020"
        app:wave_height_type="normal"

        app:progress_show_arrow="true"
        app:progress_show_circle_backgroud="true"
        app:progress_colors="@array/material_colors"
        >

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    </com.cjj.MaterialRefreshLayout>

    <RelativeLayout
        android:id="@+id/rl_location"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:background="#eecccccc"
        android:gravity="center_vertical"
        >
        <ImageView
            android:id="@+id/iv_location"
            android:layout_width="20dp"
            android:layout_height="30dp"
            android:src="@mipmap/location"
            android:scaleType="fitXY"
            android:layout_margin="6dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="1dp"
            />
        <TextView
            android:id="@+id/tv_position"
            android:layout_toRightOf="@+id/iv_location"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="正在收索地理位置"
            android:textSize="12sp"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:ellipsize="end"
            android:layout_marginLeft="3dp"
            />

        <ImageView
            android:id="@+id/iv_locationq"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/locationq"
            android:scaleType="fitXY"
            android:layout_margin="6dp"
            android:layout_gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            />
    </RelativeLayout>
</RelativeLayout>